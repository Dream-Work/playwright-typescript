{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["esnext", "dom"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/fixtures/*": ["fixtures/*"],
      "@/types/*": ["./types/*"],
      "@/pages/*": ["./page-objects/*"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    ".eslintrc.json",
    "playwright.config.ts",
    "package.json",
    "./tests/**/*",
    "./page-objects/**/*"
  ]
}
